@require 'nib'
@require '../node_modules/yorha/src/consts.styl'

monitor()
  @media screen and (max-width: 768px)
    {block}

print()
  @media print
    {block}

.top
  display flex
  flex-flow row
  align-items center
  +monitor()
    flex-flow column

.title
  flex 1 0 auto
  margin 0
  margin-right 1rem
  +monitor()
    margin-right 0
    margin-bottom 1rem

.links
  margin 0
  padding 0
  list-style-type none
  > li
    display inline
    &:after
      content ' / '
    &:last-of-type:after
      content ''

.figure-img
  height 10rem
  width 100%
  background-color $c-weak
  background-size cover
  background-position center
